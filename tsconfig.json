{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "@types/node",
            "@types/express"
        ],
    },
    "include": [
        "server/*.ts",
        "./src/*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
}